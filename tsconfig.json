{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ESNext",
        "module": "ESNext",
        "removeComments": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,    
        "types": [
            "node",
            "@wdio/globals/types",
            "@wdio/cucumber-framework",
            "expect-webdriverio",
            "@wdio/appium-service"
        ]
    }
}
